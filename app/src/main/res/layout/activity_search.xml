<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SearchActivity">

    <!-- 뒤로가기 버튼 -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/ic_back_black_vector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 검색창 -->
    <RelativeLayout
        android:id="@+id/searchContainer"
        android:layout_width="343dp"
        android:layout_height="42dp"
        android:layout_below="@id/backButton"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/search_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavBar">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/divider"
            android:background="@null"
            android:hint="검색"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="14sp"
            android:textColorHint="#999999"
            android:maxLines="1"
            android:singleLine="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/divider" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/searchIcon"
            android:layout_marginEnd="8dp"
            android:background="#E0E0E0"
            app:layout_constraintEnd_toEndOf="@id/searchIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </RelativeLayout>

    <!-- 장소/계정 탭 레이아웃 -->
    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchContainer"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavBar">

        <!-- 장소 탭 -->
        <LinearLayout
            android:id="@+id/placeTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomNavBar">

            <TextView
                android:id="@+id/placeTabText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장소"
                android:textColor="#000000"
                android:textSize="16sp"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bottomNavBar" />

            <View
                android:id="@+id/placeTabIndicator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"
                app:layout_constraintTop_toBottomOf="@id/placeTab"
                app:layout_constraintBottom_toTopOf="@id/bottomNavBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>

        <!-- 계정 탭 -->
        <LinearLayout
            android:id="@+id/accountTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomNavBar">

            <TextView
                android:id="@+id/accountTabText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계정"
                android:textColor="#AAAAAA"
                android:textSize="16sp"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bottomNavBar" />

            <View
                android:id="@+id/accountTabIndicator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/accountTab"
                app:layout_constraintBottom_toTopOf="@id/bottomNavBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>
    </LinearLayout>

    <!-- 최근 검색어 섹션 -->
    <TextView
        android:id="@+id/recentSearchesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchContainer"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="최근 검색어"
        android:textColor="#333333"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/searchContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 최근 검색어 컨테이너 -->
    <LinearLayout
        android:id="@+id/recentSearchesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recentSearchesTitle"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:minHeight="40dp"
        app:layout_constraintTop_toBottomOf="@id/recentSearchesTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 인기 검색어 섹션 -->
    <TextView
        android:id="@+id/popularSearchesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recentSearchesContainer"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="인기 검색어"
        android:textColor="#333333"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/recentSearchesContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 인기 검색어 예시 아이템 -->
    <TextView
        android:id="@+id/popularSearchItem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popularSearchesTitle"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/search_item_bg"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="서울"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/popularSearchesTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/popularSearchItem2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popularSearchesTitle"
        android:layout_toEndOf="@id/popularSearchItem1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/search_item_bg"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="제주도"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/popularSearchesTitle"
        app:layout_constraintEnd_toEndOf="@id/popularSearchItem1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/popularSearchItem3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popularSearchesTitle"
        android:layout_toEndOf="@id/popularSearchItem2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/search_item_bg"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="부산"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/popularSearchesTitle"
        app:layout_constraintEnd_toEndOf="@id/popularSearchItem2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/popularSearchItem4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popularSearchItem1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/search_item_bg"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="경복궁"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/popularSearchItem1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/popularSearchItem5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popularSearchItem1"
        android:layout_toEndOf="@id/popularSearchItem4"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/search_item_bg"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="한옥마을"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/popularSearchItem1"
        app:layout_constraintEnd_toEndOf="@id/popularSearchItem4"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 검색 결과 리사이클러뷰 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchResultsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabLayout"
        android:layout_above="@id/bottomNavBar"
        android:visibility="gone"
        android:padding="16dp"
        android:clipToPadding="false" />

    <!-- 장소 검색 결과 리사이클러뷰 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/placeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabLayout"
        android:layout_above="@id/bottomNavBar"
        android:visibility="gone"
        android:padding="16dp"
        android:clipToPadding="false" />

    <!-- 검색 결과 없음 텍스트 -->
    <TextView
        android:id="@+id/noResultsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="검색 결과가 없습니다"
        android:textColor="#999999"
        android:textSize="16sp"
        android:visibility="gone" />

    <!-- 로딩 프로그레스바 -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- 하단 네비게이션 바 -->
    <include
        android:id="@+id/bottomNavBar"
        layout="@layout/view_bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout> 